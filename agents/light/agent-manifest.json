/**
 * File: agent-manifest.json
 * Description: Manifest configuration for Microsoft Copilot Studio Light Agent
 * Author: Microsoft Copilot Studio Team
 * Date: 2025-11-11
 * Version: 1.0.0
 * License: MIT
 * 
 * This file defines the core configuration for a Light version of a
 * Microsoft Copilot Studio Agent with basic capabilities.
 */

{
  "schema_version": "1.0",
  "agent": {
    "id": "copilot-light-agent-001",
    "name": "Copilot Light Agent",
    "type": "light",
    "version": "1.0.0",
    "description": "A lightweight Microsoft Copilot Studio agent for basic conversational AI tasks",
    "created_date": "2025-11-11",
    "last_modified": "2025-11-11"
  },
  "capabilities": {
    "natural_language": true,
    "task_automation": false,
    "custom_actions": false,
    "multi_turn_conversation": true,
    "context_retention": "session"
  },
  "configuration": {
    "max_tokens": 1000,
    "temperature": 0.7,
    "response_format": "text",
    "language": "fr-FR",
    "fallback_language": "en-US"
  },
  "knowledge_sources": [
    {
      "type": "static",
      "name": "FAQ Base",
      "path": "/knowledge/faq.json"
    }
  ],
  "triggers": [
    {
      "type": "keyword",
      "keywords": ["aide", "help", "bonjour", "hello"],
      "action": "start_conversation"
    }
  ],
  "limits": {
    "max_conversation_length": 10,
    "rate_limit": "100/hour",
    "concurrent_users": 50
  }
}
