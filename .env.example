# File: .env.example
# Description: Exemple de fichier de variables d'environnement
# Author: Microsoft Copilot Studio Team
# Date: 2025-11-11
# Version: 1.0.0
# 
# Copiez ce fichier en .env et remplissez avec vos valeurs

# Azure Configuration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_SUBSCRIPTION_ID=your-subscription-id

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=copilot_dev
DB_USER=copilot_user
DB_PASSWORD=your-password
SQL_CONNECTION_STRING=Server=localhost;Database=copilot_dev;

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Configuration
API_BASE_URL=http://localhost:3000
API_KEY=your-api-key
API_TIMEOUT=30000

# Microsoft 365
SHAREPOINT_API_KEY=your-sharepoint-key
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/...

# Monitoring
APPLICATION_INSIGHTS_KEY=your-insights-key
LOG_LEVEL=info

# Features
ENABLE_DEBUG=false
ENABLE_MOCK_INTEGRATIONS=true
ENABLE_TELEMETRY=true

# Environment
NODE_ENV=development
PORT=3000
